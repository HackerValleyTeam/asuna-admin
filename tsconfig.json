{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "declarationMap": true,
    "skipLibCheck": true,
    "outDir": "lib/esm",
    "baseUrl": "./",
    "paths": {
      "@asuna-admin/*": ["src/*"]
    }
  },
  "include": ["./src", "@types/asuna.d.ts", "@types/global.d.ts"],
  "exclude": ["**/*.spec.*"]
}
