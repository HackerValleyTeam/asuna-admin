{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    // 可选参数会被自动地加上 | undefined
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@asuna-admin/store": ["./store"],
      "@asuna-admin/adapters": ["./adapters"],
      "@asuna-admin/helpers": ["./helpers"]
    }
  },
  //  using ts-loader now
  //  "awesomeTypescriptLoaderOptions": {
  //    "useBabel": true,
  //    "babelCore": "@babel/core",
  //    "useCache": false
  //  },
  "exclude": ["examples", "dist", ".next", "stories", ".storybook", "node_modules"]
}
